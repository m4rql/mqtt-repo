<div class="row"> 
  <div class="col-sm">
    <div class="card card-body mb-2 col-sm" style="background-color: #58ACFA;">
        <h4 align="center">TEMPERATURE &nbsp<i class="fas fa-thermometer-half"></i></h4>
        <div class="card card-body mb-2">
          <h6 align="center">Latest values received</h6>
          <div id="latest-temp"></div>
          <hr/>
        </div>
        <div class="card card-body mb-2">
          <h6 align="center">Average</h6>
          <div id="avg-temp"></div>
          <hr/>
        </div>
        <div class="card card-body mb-2">
          <h6 align="center">Values received during last hour</h6>
            <div class="card card-body mb-2">
              <div id="lasthour-temp">
                {{#each values}}
                  <c id="{{this.date}}"><font size=2><{{this.temperature}} Â°C></font></c>
                {{/each}}
              </div>
            </div>
        </div>
      </div>
    </div>
    <div class="col-sm">
      <div class="card card-body mb-2 col-sm">
        <h4 align="center">ANALYTICS &nbsp<i class="fas fa-chart-bar"></i></h4>
          <canvas id="temp-chart"></canvas>
          <canvas id="temp-chart-avg"></canvas>
      </div>
    </div>
  </div>